# Copy this file to terraform.tfvars and update with your actual values
# 
# To find your existing resources, run:
# aws eks list-clusters --region us-west-2
# aws eks describe-cluster --name YOUR_CLUSTER --region us-west-2 --query 'cluster.resourcesVpcConfig.vpcId'

# AWS Region where your existing cluster is located
region = "us-west-2"

# Name of your existing EKS cluster (REQUIRED - replace with actual name)
cluster_name = "REPLACE_WITH_YOUR_ACTUAL_CLUSTER_NAME"

# VPC ID of your existing VPC (REQUIRED - replace with actual VPC ID)
vpc_id = "REPLACE_WITH_YOUR_ACTUAL_VPC_ID"

# Enable Gitea installation
enable_gitea = true

# Enable ArgoCD installation (set to false if already installed on your cluster)
enable_argocd = false

################################################################################
# Git Repository Configuration
################################################################################
# These values will be stored in AWS Secrets Manager

# Git username (default: "gitea" for local Gitea server)
git_username = "gitea"

# Git password or token (default: "gitea123" for local Gitea server)
# For GitHub, use a Personal Access Token
# For GitLab, use a Personal Access Token or Deploy Token
git_password = "gitea123"

# Git server URL (only used when enable_gitea = false)
# Examples:
#   - GitHub: "https://github.com"
#   - GitLab: "https://gitlab.com"
#   - Custom: "https://git.example.com"
git_server_url = "https://github.com"

# Git revision/branch to track (default: "HEAD")
git_revision = "HEAD"

################################################################################
# AWS Secrets Manager Secret Names
################################################################################
# These are the names of the secrets that will be created in AWS Secrets Manager
# You can customize these if needed

# secret_name_git_data_platform  = "eks-blueprints-workshop-gitops-platform"
# secret_name_git_data_workloads = "eks-blueprints-workshop-gitops-workloads"
# secret_name_git_data_addons    = "eks-blueprints-workshop-gitops-addons"

# Tags to apply to resources
tags = {
  Terraform   = "true"
  Environment = "workshop"
  Project     = "gitea-deployment"
}